rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    match /users/{uid}/dreams/{dreamId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    match /users/{uid}/symbolStats/{symbol} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    match /users/{uid}/horoscopes/{date} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
